---

<Base titre="Accueil">
  <h1>Offres</h1>
  <div x-data="{ showFavorites: false, viewMode: 'grid' }">
    <!-- Bouton pour alterner entre favoris et tout afficher -->
    <button @click="showFavorites = !showFavorites">
      <span x-show="!showFavorites">Afficher les favoris</span>
      <span x-show="showFavorites">Afficher tout</span>
    </button>

    <!-- Boutons pour alterner entre vue grille et vue liste -->
    <button @click="viewMode = 'grid'">Vue Grille</button>
    <button @click="viewMode = 'list'">Vue Liste</button>

    <!-- Section affichant les offres -->
    <div x-show="showFavorites">
      <div x-show="viewMode === 'grid'" class="grid grid-cols-3 gap-4">
        {offres.map((offre) => offre.favori && <Card {...offre} />)}
      </div>
      <div x-show="viewMode === 'list'" class="list">
        {offres.map((offre) => offre.favori && <Card {...offre} />)}
      </div>
    </div>
    <div x-show="!showFavorites">
      <div x-show="viewMode === 'grid'" class="grid grid-cols-3 gap-4">
        {offres.map((offre) => <Card {...offre} />)}
      </div>
      <div x-show="viewMode === 'list'" class="list">
        {offres.map((offre) => <Card {...offre} />)}
      </div>
    </div>
  </div>
</Base>
